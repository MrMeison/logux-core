{
  "name": "logux-core",
  "version": "0.1.0",
  "description": "Log for Logux with test tools",
  "keywords": [
    "logux"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/logux-core",
  "dependencies": {
    "nanoevents": "^0.3.0"
  },
  "devDependencies": {
    "docdash": "^0.4.0",
    "eslint": "^4.0.0",
    "eslint-config-logux": "^13.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-es5": "^1.1.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^20.0.4",
    "jsdoc": "^3.4.3",
    "logux-store-tests": "0.0.1",
    "lint-staged": "^4.0.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1",
    "yaspeller-ci": "^0.4.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yarn run docs && yaspeller-ci *.md docs/*.html",
    "clean": "rimraf docs/ coverage/",
    "lint": "eslint *.js test/{**/,}*.js",
    "docs": "jsdoc --configure .jsdocrc *.js",
    "test": "jest --coverage && yarn run lint && yarn run spellcheck"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/browser"
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
